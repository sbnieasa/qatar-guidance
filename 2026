        let currentQ = 0, scores = {R:0, I:0, A:0, S:0, E:0, C:0};

        function startQuiz() {
            currentQ = 0; scores = {R:0, I:0, A:0, S:0, E:0, C:0};
            document.getElementById('question-area').style.display = 'block';
            document.getElementById('quiz-result').style.display = 'none';
            showQuestion();
        }

        function showQuestion() {
            const area = document.getElementById('question-area');
            if (currentQ < questions.length) {
                area.innerHTML = `<p style="font-weight:bold;">ุณุคุงู ${currentQ+1}: ${questions[currentQ].q}</p>
                <button class="option-btn" onclick="nextQ(2)">ูุนู</button>
                <button class="option-btn" onclick="nextQ(1)">ุฃุญูุงูุงู</button>
                <button class="option-btn" onclick="nextQ(0)">ูุง</button>`;
            } else { showResult(); }
        }

        function nextQ(v) { scores[questions[currentQ].type] += v; currentQ++; showQuestion(); }

