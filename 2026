        function showM(id) { document.getElementById(id).style.display = 'flex'; }
        function hideM(id) { document.getElementById(id).style.display = 'none'; }
        function toggleC(btn, index) {
            const card = btn.closest('.uni-card');
            const contents = card.querySelectorAll('.content-area');
            const isVisible = contents[index].style.display === 'block';
            contents.forEach(c => c.style.display = 'none');
            contents[index].style.display = isVisible ? 'none' : 'block';
        }

        // ููุทู ุงูุจูุช
        function toggleChat() { 
            const w = document.getElementById('ai-chat-window'); 
            w.style.display = (w.style.display==='flex')?'none':'flex'; 
        }
